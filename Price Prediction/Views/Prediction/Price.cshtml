@model PricePredictionML.Model.DataModels.ModelInput
@{
    ViewData["Title"] = "Price Prediction Using ML.NET";
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <h2>Price Prediction using ML.NET</h2>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Price">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Passenger_count" class="control-label"></label>
                    <input asp-for="Passenger_count" type="number" class="form-control" />
                    <span asp-validation-for="Passenger_count" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Trip_time_in_secs" class="control-label"></label>
                    <input asp-for="Trip_time_in_secs" class="form-control" />
                    <span asp-validation-for="Trip_time_in_secs" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Trip_distance" class="control-label"></label>
                    <input asp-for="Trip_distance" class="form-control" />
                    <span asp-validation-for="Trip_distance" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Payment_type" class="control-label"></label>
                    <select asp-for="Payment_type" class="form-control">
                        <option value="CSH">Cash</option>
                        <option value="CRD">Credit</option>
                    </select>
                    <span asp-validation-for="Payment_type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Check" class="btn btn-default" id="checkbutton" />

                </div>
            </form>
        </div>
        <div class="col-md-offset-2 col-md-4">

            <h2 id="result">Result :</h2>
        </div>
    </div>
    <script>
        debugger;
        $(document).ready(function () {
            $.noConflict();
            $("#checkbutton").click(function () {
                sessionStorage.setItem("x",@ViewBag.Price);
            });
            $("#result").append(sessionStorage.getItem("x"));
            //sessionStorage.clear();
            console.log(sessionStorage.getItem("x"))
        });
    </script>
</body>
</html>